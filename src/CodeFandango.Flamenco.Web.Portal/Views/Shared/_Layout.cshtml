@using CodeFandango.Flamenco.Models.Authentication
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flamenco Web Portal</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="menu">
        <div class="logo">
            <img src="/img/logo.png" alt="Flamenco" title="Flamenco" />
        </div>

        <div class="menu-items main">
            <a class="menu-item" href="/">
                <div class="icon"><i class="fas fa-dashboard"></i></div>
                <label>Dashboard</label>
            </a>
            <a class="menu-item" href="#" data-submenu="participation">
                <div class="icon"><i class="fas fa-users"></i></div>
                <label>Participation</label>
                <div class="arrow"><i class="fas fa-chevron-right"></i></div>
            </a>
            <a class="menu-item" href="#" data-submenu="admin">
                <div class="icon"><i class="fas fa-crown"></i></div>
                <label>Administration</label>
                <div class="arrow"><i class="fas fa-chevron-right"></i></div>
            </a>
        </div>

        @if (User.IsInRole(Roles.DatabaseAdmin))
        {
            <div class="menu-items">
                <a class="menu-item" href="/admin/databases">
                    <div class="icon"><i class="fas fa-database"></i></div>
                    <label>Databases</label>
                </a>
                <a class="menu-item" href="/account/logout">
                    <div class="icon"><i class="fas fa-database"></i></div>
                    <label>Switch Database</label>
                </a>
            </div>
        }
    </div>

    <div class="content">
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("buttonBar", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/menu.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            var siteMenu = new ui.menu();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
